@67705 = ~Liftplattform des Basaltturms~
@67706 = ~Käfig~
@67707 = ~Zum unterirdischen Fluss~
@67708 = ~Eiche~
@67709 = ~Lager der Ogerbanditen~
@67710 = ~Turmruinen~
@67711 = ~Verderbter Hain~
@67712 = ~Zu Kanaglym~
@67713 = ~Zu den Stollen~
@67714 = ~Vorratslager der Kreuzritter~
@67715 = ~Schneiderin~
@67716 = ~Hört zu: In der Haupthalle der Burg gibt es in der Mitte einen losen Stein im Mosaik auf dem Boden. Wenn ihn nicht schon jemand anderes bemerkt hat, sollte sich darunter etwas Wertvolles befinden.~ [BD67716]
@67717 = ~Axt hoch, mein Freund. Wenn Ihr Hephernaan findet, verpasst ihm einen schönen Tritt in seine Weichteile, mit freundlichen Grüßen von Daeros Drachenspeer.~ [BD67717]
@67718 = ~Theodosia die Ungepeinigte~
@67719 = ~Fanegonoroms Ruhestätte~
@67720 = ~Klaffende Grube~
@67721 = ~Verborgenes Versteck~
@67722 = ~Korlasz' Zelle~
@67723 = ~Sterbt! STERBT!~ [BD67723]
@67724 = ~Narren sterben!~ [BD67724]
@67725 = ~Freiheit oder Tod!~ [BD67725]
@67726 = ~Fürchtet mich!~ [BD67726]
@67727 = ~Ihr seid bereits ein Geist.~ [BD67727]
@67728 = ~Niemand wird auf einen Goblin hören, doch ich versuche es.~ [BD67728]
@67729 = ~Wenn ich mich nicht hinlege, schlafe ich im Stehen ein.~ [BD67729]
@67730 = ~Das Reich der Toten ist aufregender als das hier.~ [BD67730]
@67731 = ~Jemand muss mich heilen!~ [BD67731]
@67732 = ~Ja?~ [BD67732]
@67733 = ~Hmm?~ [BD67733]
@67734 = ~Was?~ [BD67734]
@67735 = ~Tut es.~ [BD67735]
@67736 = ~Ärger.~ [BD67736]
@67737 = ~Schnell.~ [BD67737]
@67738 = ~In Ordnung.~ [BD67738]
@67739 = ~Das werde ich.~ [BD67739]
@67740 = ~Einen Augenblick.~ [BD67740]
@67741 = ~Wenn Ihr meint.~ [BD67741]
@67742 = ~Bin schon dabei.~ [BD67742]
@67743 = ~Sicher.~ [BD67743]
@67744 = ~Ja.~ [BD67744]
@67745 = ~Ah!~ [BD67745]
@67746 = ~Ich gehe zu den Geistern.~ [BD67746]
@67747 = ~Wälder erinnern mich immer an meine Heimat. Kann keins von beidem leiden.~ [BD67747]
@67748 = ~Städte sind kein sicherer Ort für jemanden wie mich. Kein Ort ist wirklich sicher.~ [BD67748]
@67749 = ~Es ist schön, in der Dunkelheit zu sehen.~ [BD67749]
@67750 = ~Das Licht ist zu hell. Können wir nicht tagsüber das Lager aufschlagen?~ [BD67750]
@67751 = ~Alles, was interessant ist, passiert nachts.~ [BD67751]
@67752 = ~Schubst mich herum und ich schubse vielleicht zurück.~ [BD67752]
@67753 = ~Madendoppler, hier.~ [BD67753]
@67754 = ~Ich mache alles, was Ihr verlangt! Hetzt mich nicht.~ [BD67754]
@67755 = ~Für Euch sehen also alle Goblins gleich aus. Das ist es doch, was Ihr sagen wollt, oder? Rassist.~ [BD67755]
@67756 = ~Fallt jetzt nieder.~ [BD67756]
@67757 = ~Kommt schon!~ [BD67757]
@67758 = ~So kann kein Schaden entstehen.~ [BD67758]
@67759 = ~Ich kann nicht alles tragen.~ [BD67759]
@67760 = ~Das gehört jetzt mir.~ [BD67760]
@67761 = ~Ich bin selbst wie ein Geist.~ [BD67761]
@67762 = ~Der Zauber ist weg.~ [BD67762]
@67763 = ~Vorsicht. Verschwendet keine Falle an einem Freund.~ [BD67763]
@67764 = ~Das ist so viel besser als mein altes Leben.~ [BD67764]
@67765 = ~Seid vorsichtig. Ihr trefft schlechte Entscheidungen.~ [BD67765]
@67766 = ~Wenn ich mit solchen Leuten verkehren wollte, hätte ich auch bei meinem Stamm bleiben können.~ [BD67766]
@67767 = ~Wegen Euch werde ich noch sterben. Ich bin alleine besser dran.~ [BD67767]
@67768 = ~Nein! NEIN! Auf gar keinen Fall!~ [BD67768]
@67769 = ~Der Körper ruht sich aus, der Geist reist weiter.~ [BD67769]
@67770 = ~Ich werde ein Geisterlied für Euch singen, Skalde. Ruht in Frieden.~ [BD67770]
@67771 = ~Fäuste voller flammender Fatalitäten!~ [BD67771]
@67772 = ~Teuflischer Tod!~ [BD67772]
@67773 = ~Kämpft oder kriecht davon, an den Kragen geht es Euch so oder so!~ [BD67773]
@67774 = ~Auf sie! Zum Angriff!~ [BD67774]
@67775 = ~Ihr habt keine Chance.~ [BD67775]
@67776 = ~So sei es! Ich werde diese tapfere Truppe zu Taten von triumphaler Tragweite treiben!~ [BD67776]
@67777 = ~*Gähn* Die Sirene des Schlafes singt mir ein Ständchen …~ [BD67777]
@67778 = ~Wenn wir hier schon warten müssen, kann ich genauso gut ein ganz neues Geschäft gründen …~ [BD67778]
@67779 = ~Gah! Tränke! Wickel!~ [BD67779]
@67780 = ~Aye?~ [BD67780]
@67781 = ~Ihr habt gerufen?~ [BD67781]
@67782 = ~Siyo?~ [BD67782]
@67783 = ~Fragt jemand anderen!~ [BD67783]
@67784 = ~Hmmm?~ [BD67784]
@67785 = ~Was ist denn NUN schon wieder?~ [BD67785]
@67786 = ~An die Arbeit!~ [BD67786]
@67787 = ~Ich bin gerade beschäftigt.~ [BD67787]
@67788 = ~Das sagt Ihr.~ [BD67788]
@67789 = ~Genau!~ [BD67789]
@67790 = ~Honglath.~ [BD67790]
@67791 = ~Einverstanden!~ [BD67791]
@67792 = ~Wenn es denn sein muss!~ [BD67792]
@67793 = ~Aaah!~ [BD67793]
@67794 = ~Ich gehe … in mein Grab …~ [BD67794]
@67795 = ~Welch bemerkenswertes Blätterwerk bedeckt uns hier!~ [BD67795]
@67796 = ~Ah, paradiesischer Pflasterstein unter meinen Sohlen.~ [BD67796]
@67797 = ~Kühle, haarsträubende Höhlen haben mir schon immer gefallen.~ [BD67797]
@67798 = ~Grelle, sengende Sonne! Ich suche mir ein schattiges Plätzchen.~ [BD67798]
@67799 = ~Die Dunkelheit ist durchaus angenehm, findet Ihr nicht?~ [BD67799]
@67800 = ~Ich bin hier und höre.~ [BD67800]
@67801 = ~Ich werde Euch unterhalten!~ [BD67801]
@67802 = ~Im Unterreich bin ich sehr bekannt.~ [BD67802]
@67803 = ~Alveus Malcanter? Den kenne ich nicht.~ [BD67803]
@67804 = ~Und nehmt das, Ihr schrecklicher Schurke!~ [BD67804]
@67805 = ~Ein Scheitern. Ein Schnitzer!~ [BD67805]
@67806 = ~Meine Angriffe sind alles andere als ausgezeichnet. Das funktioniert nicht.~ [BD67806]
@67807 = ~Meine Beutel platzen! Musste es plumpsen lassen.~ [BD67807]
@67808 = ~Ich konnte eine Kleinigkeit greifen!~ [BD67808]
@67809 = ~Unsichtbar.~ [BD67809]
@67810 = ~Meine Magie missglückt!~ [BD67810]
@67811 = ~Zu Fuße sind Fallen. Schreitet vorsichtig voran.~ [BD67811]
@67812 = ~Wir leisten astreine Arbeit! Ich bin beeindruckt.~ [BD67812]
@67813 = ~Welch großmütige Gedanken gehen Euch durch den Kopf?~ [BD67813]
@67814 = ~Das geht so gar nicht. Mein Weg wird sich schon bald von Eurem wegbewegen.~ [BD67814]
@67815 = ~Genug! Ich, Baeloth der Unterhaltungskünstler, gehe jetzt GANZ WOANDERSHIN.~ [BD67815]
@67816 = ~Springt davon! Schnell! Sofort!~ [BD67816]
@67817 = ~Und noch ein Herausforderer geht zu Boden!~ [BD67817]
@67818 = ~Schlaft gut, Dalninil.~ [BD67818]
@67819 = ~In Selûnes Namen!~ [BD67819]
@67820 = ~Auf die Knie!~ [BD67820]
@67821 = ~Die Ungerechten werden umkommen!~ [BD67821]
@67822 = ~Eure Bosheit hat jetzt ein Ende.~ [BD67822]
@67823 = ~Das Licht gibt mir Kraft.~ [BD67823]
@67824 = ~Ich werde alle mit Weisheit leiten.~ [BD67824]
@67825 = ~Ohne genug Ruhepausen kann der Körper nicht richtig funktionieren.~ [BD67825]
@67826 = ~Ich bin Untätigkeit nicht gewohnt. Mir wäre es lieber, wir würden weitermachen.~ [BD67826]
@67827 = ~Ich brauche Heilung.~ [BD67827]
@67828 = ~Ja?~ [BD67828]
@67829 = ~Was gibt es?~ [BD67829]
@67830 = ~Hm?~ [BD67830]
@67831 = ~Ihr habt gerufen?~ [BD67831]
@67832 = ~Ich höre.~ [BD67832]
@67833 = ~Gefahr?~ [BD67833]
@67834 = ~Selûne führt meine Hand.~ [BD67834]
@67835 = ~Wie Ihr wünscht.~ [BD67835]
@67836 = ~Gleich.~ [BD67836]
@67837 = ~Einverstanden.~ [BD67837]
@67838 = ~Ja.~ [BD67838]
@67839 = ~Beim Licht.~ [BD67839]
@67840 = ~Wird erledigt.~ [BD67840]
@67841 = ~Uff.~ [BD67841]
@67842 = ~Ich gehe zu Selûnes Licht.~ [BD67842]
@67843 = ~Die Wälder durchfluten mich mit innerer Ruhe.~ [BD67843]
@67844 = ~In Städten kommen immer unangenehme Erinnerungen in mir hoch. Lasst uns diesen Ort schnell verlassen.~ [BD67844]
@67845 = ~Etwas Böses umgibt uns.~ [BD67845]
@67846 = ~Der Sonnenaufgang bringt einen neuen Tag voller Prüfungen und Siege.~ [BD67846]
@67847 = ~Selûne schreitet voran. Das ist Balsam für mein Herz.~ [BD67847]
@67848 = ~Beim Willen der Herrin des Mondes.~ [BD67848]
@67849 = ~Mit genug Zeit kann ich sogar eine Steinwand eintreten.~ [BD67849]
@67850 = ~Meine rechte Faust steht für Disziplin. Meine linke für Ehre.~ [BD67850]
@67851 = ~Ich mag den Mond wirklich sehr gerne. Der Mond ist einfach toll.~ [BD67851]
@67852 = ~Spürt die Macht meines Ordens!~ [BD67852]
@67853 = ~Ich bin beschämt.~ [BD67853]
@67854 = ~Ich kann meinem Ziel nicht wehtun!~ [BD67854]
@67855 = ~Ich kann nicht so viel auf einmal tragen. Ich habe es fallen lassen.~ [BD67855]
@67856 = ~Befreit für unser Ziel.~ [BD67856]
@67857 = ~Ich verstecke mich vor dem Licht.~ [BD67857]
@67858 = ~Mein Zauber ging verloren!~ [BD67858]
@67859 = ~Ich habe eine Falle für unsere Feinde aufgestellt.~ [BD67859]
@67860 = ~Wir wandeln auf dem Pfad der Helden. Ich bin erfreut.~ [BD67860]
@67861 = ~Ich verliere den Glauben an unser Ziel. Wir müssen uns bessern.~ [BD67861]
@67862 = ~Wenn wir die Schatten nicht bald verlassen und wieder im Licht wandeln, sehe ich mich gezwungen, zu gehen.~ [BD67862]
@67863 = ~Ich kann nicht länger bei jemandem bleiben, der solche Taten verübt. Hier trennen sich unsere Wege. Wenn wir uns wiedersehen, werde ich Euch wohl nicht mehr freundlich gesinnt sein.~ [BD67863]
@67864 = ~Das kann noch nicht das Ende sein! Silberdame, vergebt mir!~ [BD67864]
@67865 = ~Möge das Licht unsere gefallenen Gefährten leiten.~ [BD67865]
@67866 = ~Ein neues Licht erstrahlt in der Dunkelheit. Ich werde Euch vermissen, mein Freund.~ [BD67866]
@67867 = ~Schnappt sie!~ [BD67867]
@67868 = ~Ich komme Euch holen.~ [BD67868]
@67869 = ~Seid vorsichtig.~ [BD67869]
@67870 = ~Ihr gehört jetzt mir.~ [BD67870]
@67871 = ~Das ist Euer Ende.~ [BD67871]
@67872 = ~Ich bin die Beste für diesen Auftrag.~ [BD67872]
@67873 = ~Ein Mädchen braucht seinen Schönheitsschlaf.~ [BD67873]
@67874 = ~Ich sehne mich nach Ablenkung.~ [BD67874]
@67875 = ~Hört auf und helft mir!~ [BD67875]
@67876 = ~Ihr wollt mich?~ [BD67876]
@67877 = ~Schätzchen?~ [BD67877]
@67878 = ~Hmmm?~ [BD67878]
@67879 = ~Braucht Ihr etwas?~ [BD67879]
@67880 = ~Ja?~ [BD67880]
@67881 = ~Hallo.~ [BD67881]
@67882 = ~Ja, Schätzchen.~ [BD67882]
@67883 = ~Was immer Ihr wünscht.~ [BD67883]
@67884 = ~Genau.~ [BD67884]
@67885 = ~Mit Vergnügen.~ [BD67885]
@67886 = ~Natürlich.~ [BD67886]
@67887 = ~Bin schon dabei.~ [BD67887]
@67888 = ~Natürlich.~ [BD67888]
@67889 = ~Uh!~ [BD67889]
@67890 = ~Nicht … so …~ [BD67890]
@67891 = ~Was gäbe ich jetzt für eine gemütliche Herberge und ein heißes Bad.~ [BD67891]
@67892 = ~Die Großstadt ist einfach wundervoll. So viele leichtgläubige und dumme Menschen auf einmal.~ [BD67892]
@67893 = ~Ich liebe solche Orte. Sie sind immer von oben bis unten mit Gold gefüllt.~ [BD67893]
@67894 = ~Die Schönheit des Sonnenaufgangs bedeutet mir nichts.~ [BD67894]
@67895 = ~Ich verrichte meine beste Arbeit in der Dunkelheit.~ [BD67895]
@67896 = ~Versuchungen gehe ich in der Regel aus dem Weg, es sei denn, ich kann ihnen nicht widerstehen.~ [BD67896]
@67897 = ~Ich liebe das Piratenleben.~ [BD67897]
@67898 = ~Alle konzentrieren sich nur auf mein Aussehen. Manchmal fühle ich mich schon sehr darauf reduziert.~ [BD67898]
@67899 = ~Vielleicht wurde ich schon damit geboren, aber … Nein. Ich wurde damit geboren.~ [BD67899]
@67900 = ~Nehmt es wie ein Held.~ [BD67900]
@67901 = ~Wie habe ich die Höllen vermisst!~ [BD67901]
@67902 = ~Ihr wollt mir widerstehen? Da müsst Ihr Euch schon was anderes ausdenken!~ [BD67902]
@67903 = ~Ich bin eine Frau, kein Packesel. Ich hab es fallen lassen.~ [BD67903]
@67904 = ~Ich übernehme das.~ [BD67904]
@67905 = ~Versteckt.~ [BD67905]
@67906 = ~Mein Zauber! Er ist weg.~ [BD67906]
@67907 = ~Passt auf Eure Füße auf. Ich habe eine Falle gelegt.~ [BD67907]
@67908 = ~So viel Spaß hatte ich schon seit Wochen nicht mehr.~ [BD67908]
@67909 = ~Ihr wollt eine hübsche Dame doch nicht verärgern, oder? Dann reißt Euch zusammen.~ [BD67909]
@67910 = ~Ich warne Euch, Schätzchen. Es gefällt mir nicht, wie wir die Dinge angehen.~ [BD67910]
@67911 = ~Ich habe versucht, die Gruppe auf den richtigen Weg zu bringen, aber jetzt habe ich genug. Ein kluges Mädchen haut ab, bevor es selbst verlassen wird.~ [BD67911]
@67912 = ~Nichts ist es wert, dafür sein Leben zu geben.~ [BD67912]
@67913 = ~Gute Nacht, Schätzchen.~ [BD67913]
@67914 = ~Lebt Ihr wie ein Narr, werdet Ihr auch den Tod eines Narren sterben, Ihr liebenswerter Hornochse.~ [BD67914]
@67915 = ~Die Natur führt meine Hand.~ [BD67915]
@67916 = ~Für das Gleichgewicht!~ [BD67916]
@67917 = ~Möget Ihr ein Festessen für die Würmer werden!~ [BD67917]
@67918 = ~Auf sie!~ [BD67918]
@67919 = ~Jetzt naht Euer Ende!~ [BD67919]
@67920 = ~Diese Entscheidung überrascht und erfreut mich. Ich werde uns angemessen führen.~ [BD67920]
@67921 = ~Alles in der Natur schläft. Auch wir sollten schlafen.~ [BD67921]
@67922 = ~Wir haben so viel zu tun und doch vergeuden wir hier unsere Zeit mit Herumstehen.~ [BD67922]
@67923 = ~Meine Lebenskraft lässt nach … Jemand muss mich heilen.~ [BD67923]
@67924 = ~Hm?~ [BD67924]
@67925 = ~Wie lautet die Aufgabe?~ [BD67925]
@67926 = ~Ja?~ [BD67926]
@67927 = ~Werde ich gebraucht?~ [BD67927]
@67928 = ~Ich bin hier.~ [BD67928]
@67929 = ~Und nun?~ [BD67929]
@67930 = ~Wenn es denn hilft.~ [BD67930]
@67931 = ~Ich verstehe.~ [BD67931]
@67932 = ~Ja.~ [BD67932]
@67933 = ~Erledigt.~ [BD67933]
@67934 = ~Das werde ich.~ [BD67934]
@67935 = ~Sofort.~ [BD67935]
@67936 = ~Jawohl.~ [BD67936]
@67937 = ~Uff!~ [BD67937]
@67938 = ~Mein Kreis schließt sich.~ [BD67938]
@67939 = ~Hier draußen fühlt es sich an, als könnte ich eines Tages Frieden finden.~ [BD67939]
@67940 = ~Diese Gebäude sind die Grabsteine der Natur. Ich würde sagen, dass wir sie alle niederreißen.~ [BD67940]
@67941 = ~Die merkwürdigsten und wildesten Kreaturen leben unter der Erde. Wandelt mit Vorsicht durch ihren Lebensraum.~ [BD67941]
@67942 = ~Die Sonne geht auf und erweckt alles Leben.~ [BD67942]
@67943 = ~In der Stille der Nacht legt sich die Beute schlafen und die Räuber kommen heraus, um zu jagen.~ [BD67943]
@67944 = ~Dies wäre ein guter Platz für einen Steinkreis.~ [BD67944]
@67945 = ~Ich bin Herr über mein Leben wie ein fliegender Vogel über dem Himmel.~ [BD67945]
@67946 = ~Manchmal ist es schwierig, neutral zu bleiben, wenn man nur von Idioten umgeben ist.~ [BD67946]
@67947 = ~Die Natur betrügt nie das Herz, das sie liebt, doch alle anderen kriegen von ihr den Hintern vermöbelt.~ [BD67947]
@67948 = ~Leid ist der Zorn der Natur!~ [BD67948]
@67949 = ~Für jeden Treffer ein Fehlschlag.~ [BD67949]
@67950 = ~Ich kann diesem Gegner nicht wehtun. Ich muss etwas anderes versuchen.~ [BD67950]
@67951 = ~Ich bin nicht hier, um Eure Taschen zu tragen. Ich habe es fallen lassen.~ [BD67951]
@67952 = ~Das gehört jetzt mir.~ [BD67952]
@67953 = ~Verdeckt.~ [BD67953]
@67954 = ~Meine Magie hat versagt!~ [BD67954]
@67955 = ~Ich habe eine Falle gelegt.~ [BD67955]
@67956 = ~Bisher finde ich unsere Aktionen gut. Behaltet alles so bei und ich werde keinen Grund haben, von Eurer Seite zu weichen.~ [BD67956]
@67957 = ~Unser Gleichgewicht funktioniert nicht richtig. IHR müsst Euch bessern.~ [BD67957]
@67958 = ~Wir entfernen uns immer weiter von der Mitte. Wenn wir so weitermachen, kann unsere Gruppe nicht bestehen bleiben.~ [BD67958]
@67959 = ~Das reicht! Es ist offensichtlich, dass wir so nicht miteinander auskommen können. Ich werde meine eigenen Wege gehen.~ [BD67959]
@67960 = ~Meine Zeit ist noch nicht gekommen!~ [BD67960]
@67961 = ~Kein Bedauern für diese, die in tobenden Kämpfen gefallen sind.~
@67962 = ~Verdammt, Khalid! Ihr sterbt und ich … Das werde ich nie verzeihen!~
@67963 = ~Zu den Waffen!~ [BD67963]
@67964 = ~Unsere Gegner werden f-fallen!~ [BD67964]
@67965 = ~Wollt Ihr vielleicht weglaufen?~ [BD67965]
@67966 = ~Sieg!~ [BD67966]
@67967 = ~Z-Zum Angriff!~ [BD67967]
@67968 = ~Seid Ihr sicher? Ich meine, w-wirklich sicher? Na gut.~ [BD67968]
@67969 = ~Meine Schritte werden i-immer langsamer. Ich glaube, ich brauche eine Pause.~ [BD67969]
@67970 = ~Ich liebe diese langen Erholungspausen. Der Tag ist dafür wie geschaffen.~ [BD67970]
@67971 = ~Ich brauche Hilfe!~ [BD67971]
@67972 = ~K-Kann ich Euch behilflich sein?~ [BD67972]
@67973 = ~Ja?~ [BD67973]
@67974 = ~Hm?~ [BD67974]
@67975 = ~I-Ich?~ [BD67975]
@67976 = ~P-Problem?~ [BD67976]
@67977 = ~W-Was gibt es?~ [BD67977]
@67978 = ~Wenn niemand besser g-geeignet ist.~ [BD67978]
@67979 = ~D-Dann tue ich es.~ [BD67979]
@67980 = ~Sofort.~ [BD67980]
@67981 = ~J-Ja!~ [BD67981]
@67982 = ~Ich b-beeile mich schon.~ [BD67982]
@67983 = ~J-Jawohl.~ [BD67983]
@67984 = ~Erledigt.~ [BD67984]
@67985 = ~Auu!~ [BD67985]
@67986 = ~Ich bin b-besiegt …~ [BD67986]
@67987 = ~Etwas f-frische Luft.~ [BD67987]
@67988 = ~So ein großer Ort. G-Ganz schön viel los hier. Und g-gutes Gedrängel.~ [BD67988]
@67989 = ~Auch wenn ich in der D-Dunkelheit sehen kann, bevorzuge ich die Oberfläche.~ [BD67989]
@67990 = ~Welche Gefahren b-birgt der heutige Tag?~ [BD67990]
@67991 = ~So viele Schatten bei Nacht. Ich sehe hinter jedem Baum und jedem Haus Feinde.~ [BD67991]
@67992 = ~Kann ich Euch sonst noch i-irgendwie helfen?~ [BD67992]
@67993 = ~Aaaah! Schleicht Euch n-nicht so an mich heran!~ [BD67993]
@67994 = ~Ich brauche zwar l-länger, um mich auszudrücken, a-aber das bedeutet nicht, dass meine Gedanken weniger es wert s-sind, ausgedrückt zu werden.~ [BD67994]
@67995 = ~Ahhh!~ [BD67995]
@67996 = ~N-Nehmt das!~ [BD67996]
@67997 = ~Ah! Ich werde mich wieder erholen.~ [BD67997]
@67998 = ~Hm? Dem kann ich nicht wehtun!~ [BD67998]
@67999 = ~Tut mir leid, so viel kann ich nicht tragen. Habe es f-fallen lassen.~ [BD67999]
@68000 = ~Ich habe es geschafft!~ [BD68000]
@68001 = ~Ich sch-schleiche.~ [BD68001]
@68002 = ~Oh, mein Zauber ist verschwendet!~ [BD68002]
@68003 = ~Ich habe eine Sprengfalle aufgestellt.~ [BD68003]
@68004 = ~Ich schätze mich glücklich, Teil dieser Gruppe zu sein.~ [BD68004]
@68005 = ~Oh weh. Das läuft nicht gut. Überhaupt nicht gut.~ [BD68005]
@68006 = ~Könnten wir über, na ja, dieses ganze schlimme Zeug reden, was hier vorgeht?~ [BD68006]
@68007 = ~Ihr seid zu weit gegangen. Ich kann nicht mehr Teil einer Gruppe sein, die so etwas tut. Selbst ich kann in so einer Situation meinen Mann stehen!~ [BD68007]
@68008 = ~Rückwärts!~ [BD68008]
@68009 = ~Wir haben wieder einen Gefährten verloren. Wie viele müssen noch fallen, bevor dieser Wahnsinn ein Ende hat?~ [BD68009]
@68010 = ~Neiiin! Jaheira!~ [BD68010]
@68011 = ~Das ist mein Wille!~ [BD68011]
@68012 = ~Spürt den Zorn arkaner Macht!~ [BD68012]
@68013 = ~Meine Magie wird Euch zerschmettern!~ [BD68013]
@68014 = ~Schurken! Macht Euch auf das Ende gefasst!~ [BD68014]
@68015 = ~Euer Ende naht!~ [BD68015]
@68016 = ~Eine weise Entscheidung, den Weiseren zu wählen.~ [BD68016]
@68017 = ~Magie verlangt einen wachen Geist. *Gähn* Ich brauche Schlaf.~ [BD68017]
@68018 = ~Mein Geist sprudelt vor Energie gerade so über. Wir sollten nicht nur untätig hier herumstehen.~ [BD68018]
@68019 = ~Ihr müsst mich heilen!~ [BD68019]
@68020 = ~Ihr habt gerufen?~ [BD68020]
@68021 = ~Ja?~ [BD68021]
@68022 = ~Ihr braucht mich?~ [BD68022]
@68023 = ~Hm?~ [BD68023]
@68024 = ~Und?~ [BD68024]
@68025 = ~Ich höre.~ [BD68025]
@68026 = ~So gut wie erledigt.~ [BD68026]
@68027 = ~Was immer Ihr wünscht.~ [BD68027]
@68028 = ~Das werde ich.~ [BD68028]
@68029 = ~Jawohl.~ [BD68029]
@68030 = ~Unverzüglich!~ [BD68030]
@68031 = ~Einverstanden.~ [BD68031]
@68032 = ~Schon unterwegs.~ [BD68032]
@68033 = ~Ah!~ [BD68033]
@68034 = ~Jiiiiihaaaaa!~ [BD68034]
@68035 = ~Das ist ein schöner Spaziergang, doch so weit von der Zivilisation entfernt fühle ich mich etwas einsam.~ [BD68035]
@68036 = ~Hier sind so viele Köpfe und so viel Wissen an einem Ort vereint.~ [BD68036]
@68037 = ~Haltet Ausschau nach alten Folianten und Schriftrollen, die verloren gegangenes arkanes Wissen beinhalten könnten.~ [BD68037]
@68038 = ~Ah, die Sonne lässt ihr Licht auf Euch scheinen!~ [BD68038]
@68039 = ~Schatten versammeln sich um Euch. Seid wachsam des Nachts.~ [BD68039]
@68040 = ~Ihr wünscht eine intelligente Konversation?~ [BD68040]
@68041 = ~Womit wollt Ihr mich denn noch alles belästigen!~ [BD68041]
@68042 = ~Möchtet Ihr einen Zaubertrick sehen? Da! Ich habe Eure Nase.~ [BD68042]
@68043 = ~Ihr, ich meine, Euch, ähm … Was wollt Ihr?~ [BD68043]
@68044 = ~Die Macht eines Zauberers!~ [BD68044]
@68045 = ~Ich werde es noch einmal probieren.~ [BD68045]
@68046 = ~Das wird so nicht gehen. Ich muss etwas anderes versuchen.~ [BD68046]
@68047 = ~Ich bin kein Diener, der so viel auf einmal tragen kann. Ich hab es fallen lassen.~ [BD68047]
@68048 = ~Von Eurer Geldbörse in meine.~ [BD68048]
@68049 = ~Ah, ich verschwinde.~ [BD68049]
@68050 = ~Meine Kräfte lassen mich im Stich!~ [BD68050]
@68051 = ~Ich habe eine Falle gebaut.~ [BD68051]
@68052 = ~Diese Gruppe ist außerordentlich … vielversprechend.~ [BD68052]
@68053 = ~Ihr wandelt zu weit abseits vom Weg der Gerechtigkeit. Ändert Eure Richtung.~ [BD68053]
@68054 = ~Ich warne Euch zum letzten Mal – dies ist nicht das Verhalten, das ich von Euch erwarte. Folgt meinem Beispiel!~ [BD68054]
@68055 = ~Ich werde keine weitere Rolle mehr in Euren Machenschaften spielen. Lebt denn wohl.~ [BD68055]
@68056 = ~Ich bin für einen solchen Kampf nicht geschaffen! Ich ziehe mich zurück!~ [BD68056]
@68057 = ~Ich verspreche Euch, dass Euer Tod nicht vergebens gewesen sein wird.~ [BD68057]
@68058 = ~Minsk! Nur der Tod vermag uns beide zu trennen!~ [BD68058]
@68059 = ~Die Augen, Boo! Kratz ihnen die Augen aus! RAAAARGHH!~ [BD68059]
@68060 = ~SCHWERT TRIFFT AUF DAS BÖSE!~ [BD68060]
@68061 = ~Hier kommen 300 Pfund Gerechtigkeit!~ [BD68061]
@68062 = ~Aaaaaangriiiff!~ [BD68062]
@68063 = ~AAAAArrrrrr!~ [BD68063]
@68064 = ~Magie ist schon beeindruckend, doch jetzt übernimmt Minsk die Führung! Schwerter für alle! Hah!~ [BD68064]
@68065 = ~Boo hört nicht auf zu gähnen, und das ist echt ansteckend! Können wir uns vielleicht etwas ausruhen?~ [BD68065]
@68066 = ~Das Abenteuer ruft! Könnt Ihr es nicht hören? Vielleicht kann nur Minsk es hören. Gehen wir, ich führe uns direkt ins Abenteuer!~ [BD68066]
@68067 = ~Jemand muss mich heilen, damit ich weiterkämpfen kann!~ [BD68067]
@68068 = ~Aye?~ [BD68068]
@68069 = ~Ja?~ [BD68069]
@68070 = ~Ihr wollt Boo?~ [BD68070]
@68071 = ~Was?~ [BD68071]
@68072 = ~Hm?~ [BD68072]
@68073 = ~Ärger?~ [BD68073]
@68074 = ~Erst das Schwert!~ [BD68074]
@68075 = ~Nicht so viel reden, mehr kämpfen!~ [BD68075]
@68076 = ~Ja!~ [BD68076]
@68077 = ~Minsk geht!~ [BD68077]
@68078 = ~Genau!~ [BD68078]
@68079 = ~In Ordnung.~ [BD68079]
@68080 = ~Sofort!~ [BD68080]
@68081 = ~Uff.~ [BD68081]
@68082 = ~Passt auf … Boo auf …~ [BD68082]
@68083 = ~Boo mag den Wald! Und ich auch. Hier gibt es viel zu knabbern.~ [BD68083]
@68084 = ~So viele winzige Menschen! Macht Platz für Minsk und Boo, kleine Leute!~ [BD68084]
@68085 = ~Eine Höhle stinkender Bosheit! Wobei die Bosheit gar nicht so riecht wie sonst. Trotzdem werden wir Euch reinwaschen, Bosheit!~ [BD68085]
@68086 = ~Ahh, ich bevorzuge das Licht des Tages. Das Böse soll die Gerechtigkeit, die ich ihm zuteilwerden lasse, bei hellem Licht sehen.~ [BD68086]
@68087 = ~Boo schläft, doch wir sollten weiter.~ [BD68087]
@68088 = ~Wenn die Gefahr ruft, antwortet Minsk. Das Schwert kommt immer zuerst!~ [BD68088]
@68089 = ~Ich trete in böse Hintern und kann nicht lügen.~ [BD68089]
@68090 = ~Es gibt nur einen BOO! Hah! Er ist unersetzlich.~ [BD68090]
@68091 = ~Das Böse hat verloren! Ich bin bis zu den Zähnen bewaffnet und habe einen Hamster bei mir!~ [MINSC26]
@68092 = ~Das sticht, nicht wahr, Bosheit?~ [BD68092]
@68093 = ~Man kann auch mal verfehlen!~ [BD68093]
@68094 = ~Keine Wirkung? Ich brauche ein größeres Schwert!~ [BD68094]
@68095 = ~So kräftig Minsk auch ist, er kann nicht alles tragen. Und er muss auch noch Platz für Boo schaffen.~ [BD68095]
@68096 = ~Minsk weiß nicht recht, wie er das geschafft hat.~ [BD68096]
@68097 = ~Keiner wird mich sehen, aber es könnte sein, dass mich mein Schlachtruf enttarnt.~ [BD68097]
@68098 = ~Schwerter schlagen nicht fehl, aber Zauber. So wie dieser gerade.~ [BD68098]
@68099 = ~Der gerissene Minsk hat dem Bösen eine Falle gestellt! Kommt schön hierher, Scheusale!~ [BD68099]
@68100 = ~Ach, es ist schon so lange her, dass Minsk mit so tollen Gefährten unterwegs war!~ [BD68100]
@68101 = ~Boo hat es sich bisher verkniffen, das zu erwähnen, aber ich weiß, dass er nicht zufrieden ist mit der Art, wie wir die Dinge angehen.~ [BD68101]
@68102 = ~Minsk hat nicht mehr dieselben freundschaftlichen Gefühle wie früher für Euch. Die Zusammenarbeit wird immer schwerer.~ [BD68102]
@68103 = ~Der Gestank der Bosheit in dieser Gruppe wird immer stärker. Boo wird die Gruppe verlassen und ich werde mit ihm gehen!~ [BD68103]
@68104 = ~Aaaaaaarrrrrr!~ [BD68104]
@68105 = ~Gefallen wie ein gefällter Baum.~ [BD68105]
@68106 = ~Dynaheir! Ich habe Euch enttäuscht!~ [BD68106]
@68107 = ~Keine Gnade denen, die gegen uns sind!~ [BD68107]
@68108 = ~Zah'har!~ [BD68108]
@68109 = ~Der Sieg wird unser sein.~ [BD68109]
@68110 = ~Der Tod kommt geschwind!~ [BD68110]
@68111 = ~Ihr werdet sterben!~ [BD68111]
@68112 = ~Einem Drow das Kommando zu übergeben, zeugt von Eurem außergewöhnlichen Vertrauen in mich. Oder außergewöhnlicher Dummheit.~ [BD68112]
@68113 = ~Selbst Ihr Oberflächenbewohner müsst schlafen, nicht wahr?~ [BD68113]
@68114 = ~Manchmal ist es schön, einfach mal eine Pause einzulegen, doch dies ist nicht der richtige Zeitpunkt. Gehen wir weiter.~ [BD68114]
@68115 = ~Ich blute! Heilt mich!~ [BD68115]
@68116 = ~Ja, Abbil?~ [BD68116]
@68117 = ~Ich stehe Euch zu Diensten.~ [BD68117]
@68118 = ~Vel'bol?~ [BD68118]
@68119 = ~Hm?~ [BD68119]
@68120 = ~Was?~ [BD68120]
@68121 = ~Redet.~ [BD68121]
@68122 = ~Ja.~ [BD68122]
@68123 = ~Dosst orn.~ [BD68123]
@68124 = ~Na gut.~ [BD68124]
@68125 = ~Fertig.~ [BD68125]
@68126 = ~Ich eile.~ [BD68126]
@68127 = ~Wenn es sein muss.~ [BD68127]
@68128 = ~Schön.~ [BD68128]
@68129 = ~Ah!~ [BD68129]
@68130 = ~Shar … holt mich …~ [BD68130]
@68131 = ~Es gibt kein Dach über dieser Welt.~ [BD68131]
@68132 = ~Urgh, der Gestank einer Meute von Rivvin auf einen Haufen. Ich hasse sie alle!~ [BD68132]
@68133 = ~Ich versinke in Erinnerungen an Orten wie diesen … höchst unerfreuliche Erinnerungen.~ [BD68133]
@68134 = ~Die Ruhe der Nacht endet und der hektische Tag übernimmt.~ [BD68134]
@68135 = ~Gepriesen sei die Nachtsängerin.~ [BD68135]
@68136 = ~Jalbyr emp'poss?~ [BD68136]
@68137 = ~Shar führt meine Hand.~ [BD68137]
@68138 = ~Ich glaube, es ist fast Zeit für eine neue Frisur.~ [BD68138]
@68139 = ~Ich hasse Euch alle. Extrem.~ [BD68139]
@68140 = ~Blutet für Shar!~ [BD68140]
@68141 = ~Verdammt!~ [BD68141]
@68142 = ~Meine Waffe taugt nichts!~ [BD68142]
@68143 = ~Ich kann nichts mehr tragen. Ich habe es fallen lassen.~ [BD68143]
@68144 = ~Ihr verdient nicht, was Ihr nicht halten könnt.~ [BD68144]
@68145 = ~Die Nacht umhüllt mich.~ [BD68145]
@68146 = ~Mist! Mein Zauber ist schiefgegangen!~ [BD68146]
@68147 = ~Die Falle ist bereit.~ [BD68147]
@68148 = ~Euch als Gefährten zu haben, ist gar nicht so unangenehm, wie ich erwartet hatte.~ [BD68148]
@68149 = ~Eure Taten sind genauso unbedacht wie unverständlich.~ [BD68149]
@68150 = ~Wollt Ihr, dass ich im Gefängnis lande oder getötet werde? Wenn nicht, verhaltet Euch bitte unauffälliger.~ [BD68150]
@68151 = ~Ich kann es nicht riskieren, weiter mit Euch zu reisen. Eure Handlungen bedrohen meine Freiheit und meinen Glauben. Ich gehe.~ [BD68151]
@68152 = ~Ich werde nicht einfach sterben!~ [BD68152]
@68153 = ~Die Dunkelheit beansprucht wieder jemanden für sich.~ [BD68153]
@68154 = ~Kehrt zurück in die Schatten, aus denen wir kamen.~ [BD68154]
@68155 = ~Eure wertlosen Leben enden hier!~ [BD68155]
@68156 = ~Außer Sterben bleibt Euch nichts!~ [BD68156]
@68157 = ~Meine magischen Kräfte werden Euch ein Ende setzen!~ [BD68157]
@68158 = ~Sterbt, Affen!~ [BD68158]
@68159 = ~Nun werdet Ihr fallen!~ [BD68159]
@68160 = ~Es ist Zeit, dass Euch Affen klar wird, wer das Kommando hat.~ [BD68160]
@68161 = ~Ich kann nicht EWIG laufen. Bei den Göttern, lasst uns eine Pause einlegen!~ [BD68161]
@68162 = ~Körperlich inaktiv, geistig inaktiv.~ [BD68162]
@68163 = ~Ich könnte ein wenig Hilfe brauchen.~ [BD68163]
@68164 = ~Ihr. Schon wieder.~ [BD68164]
@68165 = ~Was ist denn nun schon wieder?~ [BD68165]
@68166 = ~Ja?~ [BD68166]
@68167 = ~Hm?~ [BD68167]
@68168 = ~WAS?~ [BD68168]
@68169 = ~Schon wieder?~ [BD68169]
@68170 = ~Ja, ja, ich habe ja schon begriffen.~ [BD68170]
@68171 = ~Wenn es sein muss.~ [BD68171]
@68172 = ~Anstrengend und hirnlos.~ [BD68172]
@68173 = ~Sehr wohl.~ [BD68173]
@68174 = ~Eine Vergeudung meiner Talente.~ [BD68174]
@68175 = ~Eines Tages … Eines Tages …~ [BD68175]
@68176 = ~*Seufz*~ [BD68176]
@68177 = ~AU!~ [BD68177]
@68178 = ~Nehmt ja nichts … von meinem Kram …~ [BD68178]
@68179 = ~Ich finde die „freie Wildbahn“ so chaotisch und schmutzig.~ [BD68179]
@68180 = ~So viele Leute an einem Ort versammelt und keiner von ihnen ist auch nur in irgendeiner Weise interessant.~ [BD68180]
@68181 = ~Eines Tages will ich mein eigenes Verlies haben. Ich werde überall tödliche Fallen und Monster aufstellen und meine Schätze dort wegsperren, wo keiner sie finden kann. Hehehe.~ [BD68181]
@68182 = ~Ein neuer Tag bricht an, und auch heute werden wir wohl wieder planlos herumstolpern.~ [BD68182]
@68183 = ~Alle lustigen Kreaturen kommen erst in der Dunkelheit heraus.~ [BD68183]
@68184 = ~Was, was, was, was, WAS?~ [BD68184]
@68185 = ~Ich habe so keine Lust mehr auf Euch.~ [BD68185]
@68186 = ~Zap! Kabumm! Bäm, bäm!~ [BD68186]
@68187 = ~Was wollt Ihr? Warum fasst Ihr mich die ganze Zeit an?~ [BD68187]
@68188 = ~HaHA!~ [BD68188]
@68189 = ~Verflixt. Daneben.~ [BD68189]
@68190 = ~Ich kriege das hier nicht hin. Versucht es mit jemand anderem!~ [BD68190]
@68191 = ~ICH soll das tragen? Nein, absolut nicht. Liegt jetzt auf dem Boden.~ [BD68191]
@68192 = ~Das gehört jetzt mir!~ [BD68192]
@68193 = ~Schleich-schleich!~ [BD68193]
@68194 = ~MEIN ZAUBER!~ [BD68194]
@68195 = ~Ich habe eine Falle augfestellt. Versucht, mit Euren Quadratlatschen nicht reinzulaufen.~ [BD68195]
@68196 = ~Vielleicht habt Ihr doch einen Funken Intelligenz.~ [BD68196]
@68197 = ~Ihr geht mir langsam auf den Geist!~ [BD68197]
@68198 = ~Ist es tatsächlich möglich, dass meine Einschätzung dieser Gruppe noch weiter enttäuscht wird?~ [BD68198]
@68199 = ~Ihr erfüllt meine Bedürfnisse nicht mehr. Ich finde euch sogar verabscheuungswürdig. Ich werde keinen weiteren Moment in Eurer Gegenwart verbringen.~ [BD68199]
@68200 = ~Ich werde nicht zulassen, dass ich wegen Eurer Inkompetenz sterbe!~ [BD68200]
@68201 = ~Lieber ein Affe als ich, der so großartig ist.~ [BD68201]
@68202 = ~ENDLICH. Fand ihn noch jemand anderes außer mir so UNHEIMLICH LÄSTIG?~ [BD68202]
@68203 = ~Ich werde Euch in Stücke reißen!~ [BD68203]
@68204 = ~Rrrrraaaargh!~ [BD68204]
@68205 = ~Sterbt schnell!~ [BD68205]
@68206 = ~Das wird blutig!~ [BD68206]
@68207 = ~Lauft doch weg, wenn Ihr könnt.~ [BD68207]
@68208 = ~Endlich mal eine kluge Entscheidung. Jetzt habe ich das Kommando.~ [BD68208]
@68209 = ~Selbst ich muss mich ab und zu ausruhen. Ich will, dass wir hier unser Lager aufschlagen.~ [BD68209]
@68210 = ~Herumlungern kann gefährlich werden. Gebt mir etwas zu tun.~ [BD68210]
@68211 = ~Heilt mich!~ [BD68211]
@68212 = ~Sagt an!~ [BD68212]
@68213 = ~Ja?~ [BD68213]
@68214 = ~Was?~ [BD68214]
@68215 = ~Schnell.~ [BD68215]
@68216 = ~Hm?~ [BD68216]
@68217 = ~Stellt mich nicht auf die Probe.~ [BD68217]
@68218 = ~Versucht, schrittzuhalten.~ [BD68218]
@68219 = ~Schön.~ [BD68219]
@68220 = ~Wenn es sein muss.~ [BD68220]
@68221 = ~Ja.~ [BD68221]
@68222 = ~Erledigt.~ [BD68222]
@68223 = ~Ich übernehme das.~ [BD68223]
@68224 = ~In Ordnung.~ [BD68224]
@68225 = ~Argh!~ [BD68225]
@68226 = ~Dunkler Meister … Ich höre Euch rufen …~ [BD68226]
@68227 = ~Ich habe nie verstanden, was an Wäldern so besonders sein soll. Das Grün ist so monoton.~ [BD68227]
@68228 = ~Die Leute hier würden mich sofort aufhängen, wenn sie die Gelegenheit dazu hätten. Ich werde ihnen nicht einmal die Gelegenheit zur Gelegenheit geben.~ [BD68228]
@68229 = ~Die angenehme Kühle des Untergrunds. Ich kenne sie gut.~ [BD68229]
@68230 = ~Die gleißende Sonne geht ein weiteres Mal auf.~ [BD68230]
@68231 = ~Die Nacht ist der Freund jeder finsteren Kreatur.~ [BD68231]
@68232 = ~Sprecht und verschwindet.~ [BD68232]
@68233 = ~Überlegt Euch gut, was Ihr von mir verlangen wollt.~ [BD68233]
@68234 = ~Ich bin schlecht. Schlecht bis in die Knochen.~ [BD68234]
@68235 = ~Ich sehe mich selbst eher als Halbmensch.~ [BD68235]
@68236 = ~Spürt den Schmerz!~ [BD68236]
@68237 = ~Mein nächster Angriff sitzt!~ [BD68237]
@68238 = ~Meine Waffe ist wirkungslos. Gebt mir eine andere!~ [BD68238]
@68239 = ~Ich muss meinen eigenen Kram tragen. Habe es fallen lassen.~ [BD68239]
@68240 = ~Ich nehme mir, was ich brauche.~ [BD68240]
@68241 = ~Verborgen in der Dunkelheit.~ [BD68241]
@68242 = ~Verdammt! Mein Zauber ist fehlgeschlagen.~ [BD68242]
@68243 = ~Eine Falle für die Ahnungslosen.~ [BD68243]
@68244 = ~Könnte schlimmer sein.~ [BD68244]
@68245 = ~Ihr solltet mir lieber mal zuhören.~ [BD68245]
@68246 = ~Eure Selbstlosigkeit wird uns noch alle umbringen.~ [BD68246]
@68247 = ~Ich bin alleine besser dran. Es war dumm von mir, überhaupt mit Euch zu kommen.~ [BD68247]
@68248 = ~Ich habe keine Angst. Ich habe keine Angst. Ich habe keine Angst. Raaargh!~ [BD68248]
@68249 = ~Ihr seid gestorben, damit ich leben kann. Ich hoffe, das ist ein Trost für Euch.~ [BD68249]
@68250 = ~Lieber frei sterben, als in Ketten zu leben. Ihr macht Eurer Art alle Ehre.~ [BD68250]
@68251 = ~In die Schlacht!~ [BD68251]
@68252 = ~Mal sehen, wie lange Ihr gegen mich besteht.~ [BD68252]
@68253 = ~Kämpft, wenn Ihr müsst, doch Ihr könnt nicht gewinnen.~ [BD68253]
@68254 = ~Ich freue mich schon.~ [BD68254]
@68255 = ~Zeit, Euch den Gnadenstoß zu geben!~ [BD68255]
@68256 = ~Ich bin es gewohnt, die Führung zu haben. Mit mir als Anführer werden wir siegreich sein.~ [BD68256]
@68257 = ~Eine Armee kann nicht ohne Pause marschieren. Wir müssen uns ausruhen.~ [BD68257]
@68258 = ~Wir haben Dinge zu erledigen. Gehen wir weiter.~ [BD68258]
@68259 = ~Ich brauche Heilung!~ [BD68259]
@68260 = ~Ja?~ [BD68260]
@68261 = ~Eure Befehle?~ [BD68261]
@68262 = ~Hm?~ [BD68262]
@68263 = ~Was?~ [BD68263]
@68264 = ~Sagt ruhig.~ [BD68264]
@68265 = ~Ich höre.~ [BD68265]
@68266 = ~Genau.~ [BD68266]
@68267 = ~Ich verstehe.~ [BD68267]
@68268 = ~Ja.~ [BD68268]
@68269 = ~Das kann ich tun.~ [BD68269]
@68270 = ~Sehr wohl.~ [BD68270]
@68271 = ~Einverstanden.~ [BD68271]
@68272 = ~Verstanden.~ [BD68272]
@68273 = ~Au!~ [BD68273]
@68274 = ~Nein … Rohma …~ [BD68274]
@68275 = ~Der Wald ist so friedlich. Ich halte jedoch immer unwillkürlich nach Banditen Ausschau.~ [BD68275]
@68276 = ~Ah, Lärm und Menschenmengen. Da fühle ich mich gleich zu Hause.~ [BD68276]
@68277 = ~Passt auf, wo Ihr hintretet. An so einem Ort kann jeder Schritt der letzte sein.~ [BD68277]
@68278 = ~Licht und Wärme. Beides erfreut mein Herz.~ [BD68278]
@68279 = ~In der Stadt sieht man selten Sterne. Heute sind sie besonders schön.~ [BD68279]
@68280 = ~Wie lauten Eure Befehle, Held?~ [BD68280]
@68281 = ~Ich bin ein Waldläufer. Ich will LOSLAUFEN.~ [BD68281]
@68282 = ~Glaubt Ihr, dass Liebe selbst auf dem Schlachtfeld erblühen kann?~ [BD68282]
@68283 = ~Manchmal träume ich, dass ich ein chaotisch guter Elf bin.~ [BD68283]
@68284 = ~Hah! Ich ziele richtig gut.~ [BD68284]
@68285 = ~Ich werde mich wieder erholen.~ [BD68285]
@68286 = ~Das funktioniert nicht! Wir müssen etwas anderes versuchen.~ [BD68286]
@68287 = ~Das kann ich nicht auch noch tragen. Ich habe es fallen lassen.~ [BD68287]
@68288 = ~Ich werde das einfach mal nehmen …~ [BD68288]
@68289 = ~Pssst. Ich wandle in den Schatten.~ [BD68289]
@68290 = ~Mein Zauber! Ich hab ihn verloren.~ [BD68290]
@68291 = ~Vorsicht, ich habe hier eine Falle aufgestellt.~ [BD68291]
@68292 = ~So ein Team ist unschlagbar.~ [BD68292]
@68293 = ~Das geht so nicht. Wir müssen uns bessern.~ [BD68293]
@68294 = ~Hört zu. Ihr entfernt Euch immer weiter von dem Weg, den ich eigentlich gehen möchte.~ [BD68294]
@68295 = ~Ich kann Euch nicht weiter unterstützen. Lebt wohl.~ [BD68295]
@68296 = ~Rohma braucht eine Mutter!~ [BD68296]
@68297 = ~Ich werde Euch nicht vergessen. Euer Opfer wird nicht umsonst gewesen sein.~ [BD68297]
@68298 = ~Ohne ihn sind wir besser dran.~ [BD68298]
@68299 = ~Für den Ruhm!~ [BD68299]
@68300 = ~Auf dass die Verdammten fallen!~ [BD68300]
@68301 = ~Ich werde Euch ins Licht schicken!~ [BD68301]
@68302 = ~Ehre, Blut und Sieg!~ [BD68302]
@68303 = ~Triumph oder Tod!~ [BD68303]
@68304 = ~Folgt mir – ich werde uns auf den Weg der Gerechtigkeit führen.~ [BD68304]
@68305 = ~Erschöpfung plagt mich, doch ich werde ihr nicht nachgeben.~ [BD68305]
@68306 = ~Wir sollten nicht einfach nur herumstehen, solange es noch so viel zu tun gibt.~ [BD68306]
@68307 = ~Beim Licht, heilt mich!~ [BD68307]
@68308 = ~Aye?~ [BD68308]
@68309 = ~Ich höre.~ [BD68309]
@68310 = ~Eure Befehle?~ [BD68310]
@68311 = ~Ja?~ [BD68311]
@68312 = ~Redet mit mir.~ [BD68312]
@68313 = ~Worum geht's?~ [BD68313]
@68314 = ~Beim Licht.~ [BD68314]
@68315 = ~Ja.~ [BD68315]
@68316 = ~Sicher doch.~ [BD68316]
@68317 = ~Einverstanden.~ [BD68317]
@68318 = ~Sofort!~ [BD68318]
@68319 = ~Auf jeden Fall.~ [BD68319]
@68320 = ~Vertraut mir.~ [BD68320]
@68321 = ~Ah!~ [BD68321]
@68322 = ~Ich gehe jetzt … ins Licht …~ [BD68322]
@68323 = ~Die Schönheit unserer Welt bestärkt meinen Entschluss. Dieses Land ist es wert, beschützt zu werden.~ [BD68323]
@68324 = ~Selbst solch starke Mauern können das Böse nicht davon abhalten, sich an Unschuldigen zu vergehen.~ [BD68324]
@68325 = ~Hier sollten wir ein paar würdige Gegner finden!~ [BD68325]
@68326 = ~Das helle Licht ist unser Segen.~ [BD68326]
@68327 = ~Wieder ist ein Tag vergangen. Morgen werden wir erneut gegen das Böse kämpfen können.~ [BD68327]
@68328 = ~Für den Ruhm des Morgenfürsten.~ [BD68328]
@68329 = ~Was wünscht Ihr von einer Tochter des Hauses Argent?~ [BD68329]
@68330 = ~Ich bin eine Aasimar. Ein Kind des Himmels. Ihr tätet gut daran, auf mich zu hören.~ [BD68330]
@68331 = ~Ich … habe … DIE MACHT!~ [BD68331]
@68332 = ~Spürt die Macht der Göttlichkeit!~ [BD68332]
@68333 = ~Ich werde wieder angreifen.~ [BD68333]
@68334 = ~Meine Angriffe sind wirkungslos. Wir müssen etwas anderes versuchen.~ [BD68334]
@68335 = ~Ich habe kein Platz mehr dafür. Musste es fallen lassen.~ [BD68335]
@68336 = ~Das gehört jetzt dem Kreuzzug.~ [BD68336]
@68337 = ~Ich bin vor feindlichen Augen verborgen.~ [BD68337]
@68338 = ~Mein Zauber ging verloren.~ [BD68338]
@68339 = ~Ich habe eine Falle für unsere Feinde aufgestellt.~ [BD68339]
@68340 = ~Die Götter des Lichts sind uns gewiss wohlgesonnen.~ [BD68340]
@68341 = ~Man kann leicht vom Weg der Rechtschaffenheit abkommen. Passt gut auf.~ [BD68341]
@68342 = ~Wir haben uns zu tief in die Dunkelheit begeben. Überlasst das Kommando mir oder einer anderen rechtschaffenen Seele. Ich werde uns schnell wieder auf den rechten Weg führen.~ [BD68342]
@68343 = ~Das ist falsch. Ich werde nicht einfach zusehen, wie Ihr all meine Prinzipien mit Füßen tretet. Hier trennen sich unsere Wege.~ [BD68343]
@68344 = ~Rückzug! Neu formieren!~ [BD68344]
@68345 = ~Geht ins Licht.~ [BD68345]
@68346 = ~Schwester! Ich werde Euch rächen!~ [BD68346]
@68347 = ~Ihr solltet nicht hier sein, <CHARNAME>. Der Held von Baldurs Tor sollte nicht so leichtsinnig sein Leben riskieren.~
@68348 = ~Das Risiko lässt sich nicht vermeiden, doch es wäre geringer, wenn Ihr an meiner Seite bleibt.~
@68349 = ~Unter den gegebenen Umständen halte ich Untätigkeit für gefährlich.~
@68350 = ~Ich habe schon riskantere Dinge getan. Sagt mir, was Ihr über Caelar wisst.~
@68351 = ~Ihr habt recht. Ich sollte mich Caelar stellen.~
@68352 = ~Ich stimme Euch vollkommen zu. Doch was geschehen ist, ist geschehen.~
@68353 = ~Dann werde ich Euch begleiten, sofern das Euer Wunsch ist. ~
@68354 = ~Gut. Lasst uns jetzt über etwas anderes reden, als die Gefahr, der ich mich stellen muss – oder besser noch, wir reden gar nicht.~
@68355 = ~Ja. Und nun sagt mir alles, was Ihr über Caelar Argent wisst.~
@68356 = ~Ich werde es mir merken. Doch im Moment komme ich auch ohne Euch klar.~
@68357 = ~Der Weise hört auf den Weisen, doch ich werde meine Weisheit fürs Erste für mich behalten.~
@68358 = ~Tja, man kann niemanden zu seinem Glück zwingen … Falls, nein, WENN Ihr Eure Meinung ändert, könnt Ihr mich hier finden.~
@68359 = ~Ihr solltet nicht hier sein, <CHARNAME>. Gorion wollte, dass ich auf Euch aufpasse.~
@68360 = ~Das Risiko lässt sich nicht vermeiden, doch es wäre geringer, wenn Ihr mich begleiten würdet.~
@68361 = ~Ich möchte ehrlich gesagt gar nicht hier sein. Und Ich möchte auf keinen Fall über Gorion reden.~
@68362 = ~Ich habe schon riskantere Dinge getan. Sagt mir, was Ihr über Caelar wisst.~
@68363 = ~Ich bin am Leben. Mehr Sicherheit kann man dieser Tage nicht verlangen.~
@68364 = ~Da muss ich Euch leider mitteilen, dass Ihr vollkommen versagt habt. Caelars Männer haben mich und Imoen im Herzogspalast angegriffen.~
@68365 = ~Wie Ihr wünscht.~
@68366 = ~Sie verwirrt uns. Einige meiner … Freunde … waren über ihre Handlungen besorgt. Sie scheinen jeglicher Logik zu entbehren.~
@68367 = ~Einige unserer … Freunde … sind wegen Caelar besorgt. Ihre Handlungen entbehren jeglicher Logik.~
@68368 = ~Sie ist eine Aasimar, aus der Linie der Argent, eine edle und in jeder Hinsicht würdige Familie. Wie konnte sie nur so tief fallen?~
@68369 = ~Kann es sein, dass sie manipuliert wird?~
@68370 = ~Vielleicht ist sie über eine der Leichen gestolpert, die sie auf ihrem Weg hinterlassen hat.~
@68371 = ~Sie wird noch viel tiefer fallen, bevor wir hier fertig sind.~
@68372 = ~Sie sollte auf dieser Welt Gutes verbreiten. Was auch immer passiert ist, – was noch immer jetzt passiert – es ist eine Tragödie.~
@68373 = ~Wirklich? Vielleicht gibt es für Euch keinen sicheren Ort.~
@68374 = ~Sie ist eine Aasimar, eine heilige Kriegerin aus der Blutlinie der Argent. Eine Macht, die man nicht unterschätzen darf.~
@68375 = ~Bleibt bei mir. Ich werde versuchen, mein Versprechen gegenüber Gorion zu halten. Sein Tod lastet noch immer schwer auf meinem Herzen. Ich möchte nicht, dass es Euch genauso ergeht.~
@68376 = ~Ich schätze Euer Angebot sehr, Jaheira. Und ich will es annehmen.~
@68377 = ~Ich kann es nicht versprechen und ich möchte Euch nicht noch mehr Kummer bereiten. Es wäre vielleicht das Beste, wenn wir eine Weile Abstand voneinander halten.~
@68378 = ~Ob ich lebe oder sterbe sollte für Euch ohne Belang sein. Verschwindet.~
@68379 = ~Unterschätzt sie nicht.~
@68380 = ~Seit wann seid Ihr so zynisch?~
@68381 = ~Seit Sarevok Gorion tötete und Imoen und ich auf uns alleine gestellt sind.~
@68382 = ~Ich war schon immer so. Ist Euch das nie aufgefallen?~
@68383 = ~Seit ich bemerkte, dass die Welt so ist, wie sie ist, und nicht so, wie ich sie gerne hätte.~
@68384 = ~Ihr macht mich traurig, <CHARNAME>. Selbst in der finstersten Stunde dürfen wir uns nicht beirren lassen und müssen das Licht verteidigen.~
@68385 = ~Möglich, ja. Manche glauben, dass der Kreuzzug nicht nur ein Produkt von Caelar ist, sondern genauso von Hephernaan geformt wird.~
@68386 = ~Was wisst Ihr über diesen Hephernaan?~
@68387 = ~Ich gehe davon aus, dass sie einen starken Willen hat. Ich kann mir schlecht vorstellen, dass irgendjemand sie dazu bringen könnte, etwas zu tun, was ihr nicht gefällt.~
@68388 = ~Wer für ihn verantwortlich ist, wird die Geschichte entscheiden. Wichtig ist, dass all das bald ein Ende hat und möglichst durch meine Hand.~
@68389 = ~Ach, Liebes. Khalid und ich wurden hierher geschickt … ähm, sind hergekommen, um mehr über ihn in Erfahrung zu bringen.~
@68390 = ~Er ist ein Ehrenbruder – so eine Art Mönch, der behauptet, nicht einem, sondern allen Göttern zu dienen. In jeder Hinsicht ist er der Berater, dem Caelar am meisten vertraut. Das ist alles, was wir über ihn wissen.~
@68391 = ~Noch nicht. Vielleicht hat dieser Ehrenbruder Hephernaan Antworten auf unsere Fragen über Caelar.~
@68392 = ~Zu viele Fragen und zu viele Leichen. Egal, wie die Antwort lautet, Caelar muss aufgehalten werden.~
@68393 = ~Wir wissen, dass Hephernaan, Caelar und jeder, der sich uns in den Weg stellt, fallen wird. Das reicht mir.~
@68394 = ~Vielleicht. Doch an ihn heranzukommen, wird nicht einfacher sein, als an sie. ~
@68395 = ~Es geht hier um Caelars Kopf. Wenn wir Hephernaan dabei auch ausschalten können, umso besser, doch wir müssen uns erst mal auf die Strahlende Dame konzentrieren.~
@68396 = ~Ich habe schon Schwierigeres geschafft.~
@68397 = ~Ich denke nicht, dass es so schwierig sein wird, an Caelar heranzukommen. Wenn wir ihre Kreuzritter angreifen, wird sie zu uns kommen – und in ihren eigenen Untergang.~
@68398 = ~Das klingt bei Euch so einfach. Ich hoffe, dass Ihr recht behaltet.~
@68399 = ~Einverstanden.~
@68400 = ~Vielleicht nicht mit Gewalt, aber es gibt auch noch andere Möglichkeiten, Menschen zu beeinflussen.~
@68401 = ~Ihr seid zu sehr auf den Kampf erpicht, <CHARNAME>. Wenn Ihr so weitermacht, kann Euch das eines Tages das Leben kosten – oder das Leben von jemandem, der Euch etwas bedeutet.~
@68402 = ~Stürzt Euch nicht so einfach in die nahende Schlacht, <CHARNAME>. Man sollte Caelar nicht unterschätzen.~
@68403 = ~He, Dirne!~ [BD68403]
@68404 = ~Und damit war das Gespräch vorbei.~
@68405 = ~Ich erlaube Euch, mich zu begleiten, wenn Ihr verspricht, mich nie wieder „Dirne“ zu nennen.~
@68406 = ~Redet Ihr mit mir?~
@68407 = ~Nennt mich noch einmal Dirne. Kommt schon, traut Euch. Nur noch einmal.~
@68408 = ~Ich glaube, so schnell habe ich noch nie entschieden, jemanden zu töten.~
@68409 = ~Hoho! Die Dirn… DAME hat Temperament. Voghiln gefällt das. Ja, ich werde Euch begleiten.~
@68410 = ~Ihr wollt den alten Voghiln nicht töten, Mädchen. Zumindest nicht, bevor Ihr wisst, was er Euch anzubieten hat.~
@68411 = ~Ihr habt nichts, was mich interessieren würde, Maulheld.~
@68412 = ~Na gut. Begleitet mich eine Weile. Mal sehen, was Ihr mir so bieten könnt – wenn Ihr denn überhaupt irgendetwas draufhabt.~
@68413 = ~Und was wäre das?~
@68414 = ~Was habt Ihr mir anzubieten? Ein paar gebrochene Rippen und die Pocken?~
@68415 = ~Ein paar Meilen entfernt gibt es eine Schafweide. Dort hat man sicher reges Interesse an Euren Angeboten.~
@68416 = ~Hoho! Voghiln mag Mädchen wie Euch. Ja, ich werde mit Euch kommen.~
@68417 = ~Jetzt verletzt Ihr aber die Gefühle des mächtigen Voghiln.~
@68418 = ~Es tut mir leid, aber Ihr müsst mich verstehen – ich habe einfach kein Interesse.~
@68419 = ~Wenn Ihr an meiner Seite kämpfen wollt, müsst Ihr aber mehr einstecken können – und ich hoffe, dass Ihr das auch könnt.~
@68420 = ~Ich bin sicher, dass Ihr schon schlimmer verletzt worden seid.~
@68421 = ~Wenn Ihr nicht bald verschwindet, werde ich mehr als nur Eure Gefühle verletzen.~
@68422 = ~Na gut. Bevor ich gehe, verratet dem alten Voghiln: Wisst Ihr, ob Hauptmann Corwin mit irgendjemandem verbandelt ist? ~
@68423 = ~Corwin interessiert sich nur für ihre Arbeit. Ihr wollt sie davon ablenken? Keine gute Idee.~
@68424 = ~Ihr lasst lieber die Pfoten von ihr, wenn Ihr nicht wollt, dass ich sie Euch abschlage.~
@68425 = ~Ich weiß es nicht und es kümmert mich auch nicht.~
@68426 = ~Das wäre eine Tragödie. Diese Finger sind schließlich legendär. Vielleicht kann Voghiln Euch eines Tages eine Kostprobe geben …~
@68427 = ~Voghiln kann warten.~
@68428 = ~Wie Ihr wünscht. Voghiln ist ein geduldiger Mann.~
@68429 = ~Interessant. Der alte Voghiln mag Geheimnisse … und Herausforderungen.~
@68430 = ~Ihr sagt, dass Ihr keine Dirne seid? Ihr seht aber so aus – und der alte Voghiln weiß, wie eine Dirne aussieht.~
@68431 = ~Das glaube ich Euch aufs Wort. Doch diese Dirne hat kein Interesse.~
@68432 = ~Diese hier werdet Ihr nie kennenlernen.~
@68433 = ~Der alte Voghiln ist bald ein toter Voghiln, wenn er jetzt nicht die Fliege macht. JETZT. SOFORT.~
@68434 = ~Seht Euch meine Hände an – meine Finger. Jeder von ihnen ist eine Legende, besonders der kleine hier. Lasst mich Euch zeigen, warum. ~
@68435 = ~Bei den Göttern, nein! Ich meine … Danke für das Angebot, aber … nein danke.~
@68436 = ~Bildet mit euren Fingern eine Faust und ich könnte sie gebrauchen. Einen muskulösen Gefährten wie Euch an meiner voll bekleideten Seite zu haben, kann nicht schaden.~
@68437 = ~Vielleicht ein andermal, wenn ich auf furchtbare Art getötet wurde und niemals wieder wiederbelebt werden kann.~
@68438 = ~Geht jetzt.~
@68439 = ~Ihr wisst nicht, was Ihr verpasst, Mädel.~
@68440 = ~Nur Arbeit und kein Spaß? Das ist nicht die Art von Leben, die ich führen möchte.~
@68441 = ~Ihr wisst nicht, was Ihr verpasst, Mädel.~
@68442 = ~Jawohl! Ihr seid also doch eine Dirne. Der alte Voghiln weiß es, denn er kennt sich mit Dirnen aus.~
@68443 = ~Das glaube ich Euch aufs Wort. Doch diese Dirne hat kein Interesse.~
@68444 = ~Ich erlaube Euch, mit mitzukommen, aber Ihr dürft mich nie wieder Dirne nennen. Verstanden?~
@68445 = ~Diese hier werdet Ihr nie kennenlernen.~
@68446 = ~Der alte Voghiln ist bald ein toter Voghiln, wenn er jetzt nicht die Fliege macht. JETZT. SOFORT.~
@68447 = ~Keine gute Idee, sagt ihr? Hoho, das wird der alte Voghiln schon noch selbst herausfinden … ~
@68448 = ~Hallöchen, <CHARNAME>!~ [BD68448]
@68449 = ~Voghiln. Was kann ich für Euch tun?~
@68450 = ~Mächtiger Voghiln. Ich möchte, dass Ihr Mitglied meiner Gruppe werdet. Was sagt Ihr?~
@68451 = ~Ich habe kein Ale.~
@68452 = ~Was wollt Ihr?~
@68453 = ~Ich sage, dass es allmählich Zeit wurde, dass ihr mich fragt! Kommt, lasst uns auf diese neue Geschäftsbeziehung anstoßen! ~
@68454 = ~Ihr könnt mir etwas Ale oder auch ein paar Informationen geben. Oder beides, wenn Ihr beides entbehren könnt, hoho!~
@68455 = ~Die Druidin, Jaheira. Sie ist verheiratet, oder? Glaubt Ihr, dass sie SEHR verheiratet ist oder nur TEILWEISE?~
@68456 = ~Sie ist ihrem Ehemann hingebungsvoll ergeben.~
@68457 = ~Wenn Ihr die Alternative seid, dann würde ich sagen, dass sie verheiratet genug ist, falls Ihr versteht.~
@68458 = ~Sie ist tot.~
@68459 = ~Fragt sie und findet es heraus.~
@68460 = ~Gut, sehr schön für sie. Und für ihn auch, ja? Hoho! ~
@68461 = ~Ach, wie schade. Tja, was kann man da machen?~
@68462 = ~Diese Frau Hauptmann der Flammenden Faust, Schael Corwin. Wisst Ihr, ob sie jemandem versprochen ist?~
@68463 = ~Corwin interessiert sich nur für ihre Arbeit. Ihr wollt sie davon ablenken? Keine gute Idee.~
@68464 = ~Ihr lasst lieber die Pfoten von ihr, wenn Ihr nicht wollt, dass ich sie Euch abschlage.~
@68465 = ~Sie ist tot.~
@68466 = ~Ich weiß es nicht und es kümmert mich auch nicht.~
@68467 = ~Keine gute Idee, sagt ihr? Hoho, vielleicht sollte der alte Voghiln das selbst herausfinden …~
@68468 = ~Es wäre eine Tragödie, sie zu verlieren. Diese Finger sind schließlich legendär.~
@68469 = ~Hauptmann Corwin wird herausfinden, warum, bevor das Ende kommt, sonst will ich nicht mehr Voghiln der Mächtige sein!~
@68470 = ~Dann werde ich es eben selbst rausfinden. Der alte Voghiln mag Geheimnisse.~
@68471 = ~Ah, es war schön, mit Euch zu reden.~
@68472 = ~Ja, das ist eine gute Idee. Das werde ich tun.~
@68473 = ~Hoho! Der alte Voghiln weiß genau, was Ihr meint! Aber wenn Ihr es noch genauer erklären wollt, versteht Voghiln das natürlich …~
@68474 = ~Nein? Na gut.~
@68475 = ~Wo kann man hier etwas zu trinken bekommen?~
@68476 = ~Sprecht mal mit Belegarm. Er versorgt den Rest der Karawane.~
@68477 = ~Kommt mit mir. Wir suchen Euch etwas Gutes zum Kippen.~
@68478 = ~Ihr habt mehr als genug getrunken, betrunkener Trottel.~
@68479 = ~Sehr gut, SEHR GUT! Ich werde sofort zu ihm gehen. Lebt wohl.~
@68480 = ~Das heißt wohl „Nein“. Dann reden wir ein anderes Mal weiter.~
@68481 = ~Voghiln mag die Art, wie Ihr denkt. Ja, ich werde mit Euch kommen. Suchen wir uns ein gutes Ale und stoßen auf uns an!~
@68482 = ~Verzweifelte Zeiten erfordern verzweifelte Maßnahmen. Aber Voghiln ist noch nicht so verzweifelt, hoho!~
@68483 = ~Die dunkelhäutige Frau mit der merkwürdigen Art, zu reden – sie heißt Dynaheir, ja? Sie scheint eine ganz Feurige zu sein, und Voghiln ist ein bisschen kalt, falls Ihr versteht, was ich meine.~
@68484 = ~Sucht Euch jemand anderen, der Euch Aufwärmen soll, mein Freund. Eine Romanze mit Dynaheir? Keine gute Idee.~
@68485 = ~Mittlerweile denke ich, dass alles, was Ihr sagt, dasselbe bedeutet. Ich denke nicht, dass Ihr herausfinden wollt, wie feurig Dynaheir wirklich sein kann.~
@68486 = ~Es tut mir leid, aber sie wird Euch nicht mehr aufwärmen können. Sie ist tot.~
@68487 = ~Wenn Ihr sie wollt, warum redet Ihr dann mit mir?~
@68488 = ~Das ist eine gute Frage. Warum eigentlich?~
@68489 = ~Das ist zu schade. Aber das Leben geht weiter und auch der mächtige Voghiln muss weitermachen.~
@68490 = ~Diese Drow-Dirne, Viconia. Seit wir uns kennen, tut sie nichts anderes, als mich zu beleidigen. Voghiln mag unartige Mädchen.~
@68491 = ~Glaubt mir, Ihr wollt Ihre Unartigkeit nicht genauer kennenlernen.~
@68492 = ~Ich denke nicht, dass sie Euch mag. Und Ihr wollt auch sicher nicht herausfinden, wie wenig sie Euch tatsächlich leiden kann.~
@68493 = ~Sie wird Euch nicht mehr beleidigen. Sie ist tot.~
@68494 = ~Wenn Ihr wisst, wie Ihr sie rumkriegen könnt, warum redet Ihr dann mit mir?~
@68495 = ~Heute scheint nicht Voghilns Tag zu sein.~
@68496 = ~Heute scheint nicht Voghilns Tag zu sein.~
@68497 = ~Diese wilde Magierin, Neera. Sie ist etwas klein, aber in der Not frisst der Teufel Fliegen. Eine Elfe sollte mir reichen.~
@68498 = ~Bei ihr spielt Ihr mit dem Feuer. Im wahrsten Sinne des Wortes. Ich würde an Eurer Stelle Abstand von ihr halten.~
@68499 = ~Sie ist ein Halbelf. Und sie wird wohl kaum Eure Fliege sein wollen.~
@68500 = ~Sie ist tot.~
@68501 = ~Ihr und Neera? Das würde ich gerne sehen.~
@68502 = ~Nicht schlimm, nicht schlimm. Es schwimmen viele Fische im Meer.~
@68503 = ~Voghiln gefällt die Art, wie Safana ihn ansieht. Ich würde mein Leben darauf verwetten, dass sie mich verführen will.~
@68504 = ~Spielt Safanas Spiel mit und Ihr werdet es wirklich verwetten.~
@68505 = ~Tatsächlich könntet Ihr Euer Leben aufs Spiel setzen, wenn Ihr Euch auf sie einlasst. Sie ist … wankelmütig.~
@68506 = ~Sie ist tot.~
@68507 = ~Ihr könntet vielleicht sogar eine Chance bei ihr haben. Ich bin sicher, dass sie schon mit viel schlimmeren Typen als Euch zu tun hatte.~
@68508 = ~Hoho! Was wäre das Leben ohne Risiko? Gar kein Leben! Ja, ich glaube, dass ich mit der Dirne sprechen sollte. Das könnte interessant werden …~
@68509 = ~Nicht doch! Was ist denn mit den Dirnen heutzutage los?~
@68510 = ~Vielleicht ich und der Goblin …? Nein. Selbst Voghiln hat Grenzen.~
@68511 = ~Fresst meine Magie!~ [BD68511]
@68512 = ~HALTET DEN MUND!~ [BD68512]
@68513 = ~Raaaaargh! KLUGE ANTWORT!~ [BD68513]
@68514 = ~DAS WIRD EIN WILDER RITT!~ [BD68514]
@68515 = ~Sterbt, Hackfresse!~ [BD68515]
@68516 = ~Sehr gut, gebt dem Mädchen, das Stimmen in seinem Kopf hört, das Kommando.~ [BD68516]
@68517 = ~Lasst mich schlafen. Schlaaaaafen. Ich bin so müde.~ [BD68517]
@68518 = ~Können wir bitte weiterziehen? Bitte? ER HÖRT NICHT AUF, ZU REDEN!~ [BD68518]
@68519 = ~Ich brauche hier eine heilende Hand!~ [BD68519]
@68520 = ~Ja?~ [BD68520]
@68521 = ~Gebt mir etwas zu tuuuun.~ [BD68521]
@68522 = ~Hm?~ [BD68522]
@68523 = ~LENKT MICH AB.~ [BD68523]
@68524 = ~Was?!~ [BD68524]
@68525 = ~Sagt mir, wohin ich gehen soll.~ [BD68525]
@68526 = ~Schön.~ [BD68526]
@68527 = ~Was immer Ihr wünscht.~ [BD68527]
@68528 = ~Bin schon dabei.~ [BD68528]
@68529 = ~Endlich etwas zu tun!~ [BD68529]
@68530 = ~Muss ich wirklich?~ [BD68530]
@68531 = ~Das kann ich tun.~ [BD68531]
@68532 = ~Ja, natürlich!~ [BD68532]
@68534 = ~Das schon wieder …~ [BD68534]
@68535 = ~In solchen Momenten vermisse ich mein Zuhause.~ [BD68535]
@68536 = ~Mmm, der süße Duft von Abwasser. Hallo, Stadt.~ [BD68536]
@68537 = ~Kommt mir das nur so vor oder ist es hier etwas feucht?~ [BD68537]
@68538 = ~GUTEN MORGEN, ALLE MITEINANDER! WAS FÜR EIN WUNDERVOLLER TAG HEUTE DOCH IST.~ [BD68538]
@68539 = ~MICH INTERESSIERT NICHT, WIE SPÄT ES BEI EUCH IST! HALTET DEN MUND.~ [BD68539]
@68540 = ~SEID STILL, SEID STILL, SEID STILL!~ [BD68540]
@68541 = ~Tötet miiiiiiich.~ [BD68541]
@68542 = ~Ich kann keine mehr für Neera mitnehmen.~
@68543 = ~Ich kann keine mehr für Neera mitnehmen.~
@68544 = ~JA! Oh, das hat wehgetan.~ [BD68544]
@68545 = ~Ugh! Adoy!~ [BD68545]
@68546 = ~Das funktioniert nicht!~ [BD68546]
@68547 = ~Ich kann nicht alles auf einmal tragen. Ich musste es fallen lassen.~ [BD68547]
@68548 = ~Muahahaha … Verstanden.~ [BD68548]
@68549 = ~Wow, ich bin tatsächlich versteckt. Wie habe ich das geschafft?~ [BD68549]
@68550 = ~Neeein! Mein Zauber!~ [BD68550]
@68551 = ~Die Falle ist scharf. Passt auf, wo Ihr hintretet.~ [BD68551]
@68552 = ~Ich muss sagen, bei uns läuft schon alles ziemlich gut – ADOY, HALTET DEN RAND – und so.~ [BD68552]
@68553 = ~Es gefällt mir nicht, wie wir die Dinge in letzter Zeit angehen.~ [BD68553]
@68554 = ~Ernsthaft? Das macht mich nicht gerade glücklich.~ [BD68554]
@68555 = ~Nach der Vorstellung habe ich mit Euch nichts mehr zu schaffen.~ [BD68555]
@68556 = ~Oh, tut mir leid, tut mir leid, tut mir leid!~ [BD68556]
@68557 = ~Ich kann keine mehr für Neera mitnehmen.~
@68558 = ~Ich kann keine mehr für Neera mitnehmen.~
@68559 = ~SEHT MICH JA NICHT MIT DIESEM BLICK AN!~ [BD68559]
