@51988 = ~Lolth sei gepriesen! Wir verdanken ihr jeden Sieg!~ [DRPRIS01]
@51989 = ~Achtet stets auch auf Euren Rücken, und die Göttin schenkt Euch vielleicht wertvolle Tage zu leben!~ [DRPRIS02]
@51990 = ~Wenn die Dämonenkönigin der Spinnengruben nach Eurem Herzen verlangt, solltet Ihr es ihr voller Freude darbringen!~ [DRPRIS03]
@51991 = ~Aller Ruhm gebührt der Dunklen Mutter!~ [DRPRIS04]
@51994 = ~Keiner wird dem Zorn der Dunklen Mutter entgehen!~ [DRPRIS07]
@51995 = ~Befolgt die Befehle der Matriarchin und lebt.~ [DRFEM101]
@51996 = ~Lolth sei gepriesen.~ [DRFEM102]
@51997 = ~Die Bestimmung der Drow ist die Unterwerfung Aller.~ [DRFEM103]
@51998 = ~Wagt es nicht, Euren Schatten auf mich zu werfen. Großes ist mir bestimmt, und Ihr spielt dabei keine Rolle.~ [DRFEM104]
@52001 = ~Feinde! Die Dunkelheit wird Euch verschlingen!~ [DRFEM107]
@52002 = ~Wagt es nicht, Anweisungen der Mutter Oberin in Frage zu stellen.~ [DRMEN101]
@52003 = ~Um es als Mann zu etwas zu bringen, muss man sich entweder mit den Büchern der Magie befassen oder in den richtigen Betten beliebt sein.~ [DRMEN102]
@52004 = ~Trennt sich der eigene Weg vom Pfad der Königin und des Hauses, führt er direkt ins Grab.~ [DRMEN103]
@52005 = ~Wie Ihr befehlt!~ [DRMEN104]
@52008 = ~Die Drow werden über alle herrschen!~ [DRMEN107]
@52009 = ~Ich bin ein Angehöriger eines gefallenen Hauses und darum ohne Wert.~ [DRSLV101]
@52010 = ~Wären die Dinge doch anders … Aber nein, ich habe mir den Zorn der Dunklen Mutter zugezogen.~ [DRSLV102]
@52011 = ~Es könnte … es könnte noch schlimmer sein. Sie hätten eine Drinne aus mir machen können.~ [DRSLV103]
@52012 = ~Ich … Ich bin hier, um zu dienen.~ [DRSLV104]
@52015 = ~Mithilfe des Schicksals und der Macht werden wir die Vorherrschaft erlangen!~ [DRSOL101]
@52016 = ~Wie Ihr befehlt!~ [DRSOL102]
@52017 = ~Sieg der Spinnenkönigin!~ [DRSOL103]
@52018 = ~Nur ein toter Oberweltler ist ein guter Oberweltler!~ [DRSOL104]
@52021 = ~Im Namen von Lolth kämpfen wir!~ [DRSOL107]
