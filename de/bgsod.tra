@44699 = ~Erleidet <AMOUNT> <TYPE> Schaden von <DAMAGER> (<RESISTED> Schaden widerstanden)~
@44700 = ~Erleidet <AMOUNT> <TYPE> Schaden von <DAMAGER>~
@44701 = ~Geschoss~
@44702 = ~Kälte~
@44703 = ~Säure~
@44704 = ~Normalerweise kümmern wir uns selbst um solche Dinge und sind streng dabei. Aber wenn Fäuste geschwungen werden, vertraue ich das EUCH an, Held.~
@44705 = ~Wir sind unterlegen! Alle Mann zurück zum Schiff!~
@44706 = ~Das ist genug – wir haben unseren Standpunkt deutlich gemacht. Zurück zur Sohn, Jungs!~
@44707 = ~Die Meere sind rau zu dieser Jahreszeit.~ [MALSAL01]
@44708 = ~Ahh, nichts tut so gut wie ein wenig Landurlaub … Alles, was ich brauche, ist ein Krug Grog und ein hübsches Mädel auf dem Schoß.~ [MALSAL02]
@44709 = ~Ich sollte mich wohl besser beeilen, oder mein Kapitän wird mir das Fell über die Ohren ziehen.~ [MALSAL03]
@44710 = ~Ein kurzes Stoßgebet zu Umberlee ist wohl alles, was mich davor bewahrt, zu Fischfutter zu werden, wenn ich da rausfahre.~ [MALSAL04]
@44711 = ~[SEEMANN 5]~ [MALSAL05]
@44712 = ~[SEEMANN 6]~ [MALSAL06]
@44713 = ~Eine Frau auf hoher See muss zäher sein als jeder Mann.~ [FEMSAL01]
@44714 = ~Hey! Glotzt mich nicht so an, oder ich verteile Eure Eingeweide gleich hier!~ [FEMSAL02]
@44715 = ~Grog! Grog und ein Bad. Genau …~ [FEMSAL03]
@44716 = ~Ich stinke also nach Fisch? Zischt ab!~ [FEMSAL04]
@44717 = ~[SEEMÄNNIN 5]~ [FEMSAL05]
@44718 = ~[SEEMÄNNIN 6]~ [FEMSAL06]
